<body>

    <h1>Gerador de Lista</h1>
    <label for="quantidade">Digite a quantidade:</label><br><br>
    <input type="number" id="quantidade" min="1" placeholder="Digite um numero qualquer">
    <button onclick="gerarLista()">Gerar Lista</button>

    <p id="mensagem"></p>
    <ul id="lista"></ul>

    <script>
        function gerarLista() {
            const valor = document.getElementById("quantidade").value.trim();
            const mensagem = document.getElementById("mensagem");
            const lista = document.getElementById("lista");

            lista.innerHTML = "";
            mensagem.textContent = "";

            if (valor === "" || isNaN(valor) || valor <= 0) {
                mensagem.textContent = "Por favor, insira um número válido.";
            } else {
                for (let i = 1; i <= valor; i++) {
                    const item = document.createElement("li");
                    item.textContent = `JOAO GABRIEL ${i}`;
                    lista.appendChild(item);
                }
            }
        }
    </script>

</body>
